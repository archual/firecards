{
  "name": "firecards",
  "version": "0.1.0",
  "description": "FireCards",
  "private": true,
  "dependencies": {
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  },
  "devDependencies": {
    "react-scripts": "1.0.3"
